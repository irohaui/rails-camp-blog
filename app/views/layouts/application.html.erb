<!DOCTYPE html>
<html>
  <head>
    <title>RailsCampBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p id="logo"><%= link_to articles_path do %>RailsCamp<span>Blog</span><% end %></p>
        <nav>
            <ul>
              <% if user_signed_in? %>
                <li><%= link_to 'トップ', articles_path %></li>
                <li><%= link_to '新規投稿', new_article_path %></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path %></li>
              <% else %>
                <li><%= link_to 'トップ', articles_path %></li>
                <li><%= link_to 'ユーザー登録', new_user_registration_path %></li>
                <li><%= link_to 'ログイン', user_session_path %></li>
              <% end %>
                <div class="clear"></div>
            </ul>
        </nav>
    <div class="clear"></div>
    </header>
    <%= yield %>
    <footer>
      <div id="footer_inner">
          <p>Copyright RailsCamp 2015 All Rights Reserved</p>
      </div>
    </footer>

  </body>
</html>
