<p id="notice"><%= notice %></p>

<div id="main">
  <%= image_tag "main-img.jpg" %>
</div>
<div id="article_wrap">
  <div id="article_list">
    <% @articles.each do |article| %>
      <%= link_to article_path(article) do%>
        <h2>
          <%= article.title %>
        </h2>
      <% end %>
      <p><%= article.created_at %></p>
      <% if user_signed_in? %>
        <p>
          <%= link_to '編集', edit_article_path(article) %>
          <%= link_to '削除', article, method: :delete, data: { confirm: '本当によろしいですか?' } %>
        </p>
      <% end %>
      <br>
      <hr>
    <% end %>
  </div>
  <div class="clear"></div>
</div>
